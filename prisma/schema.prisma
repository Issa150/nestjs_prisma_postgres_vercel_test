generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

  // provider = "mysql"
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id             Int            @id  @default(autoincrement())
  role           RoleEnume      @default(USER)
  username       String         @unique
  firstName      String?
  lastName       String?
  phone          Int?
  age            Int?
  deletedAt      DateTime?
  updatedAt      DateTime?      @updatedAt
  createdAt      DateTime       @default(now())
}

enum RoleEnume {
  ADMIN
  AUTHOR
  USER
}